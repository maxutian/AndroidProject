<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <com.github.clans.fab.FloatingActionButton
        android:id="@+id/flash_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_flash"
        android:layout_gravity="top|start"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        fab:fab_showShadow="false"
        fab:fab_colorNormal="#55666666"
        fab:fab_colorRipple="#77ffffff"
        fab:fab_colorPressed="#55666666"
        fab:fab_size="normal"/>

    <com.github.clans.fab.FloatingActionButton
        android:id="@+id/camera_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_photo_camera"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="35dp"
        fab:fab_size="normal"
        fab:fab_showShadow="true"
        fab:fab_shadowColor="#66000000"
        fab:fab_shadowRadius="4dp"
        fab:fab_shadowXOffset="1dp"
        fab:fab_shadowYOffset="3dp"
        fab:fab_colorNormal="#e91e63"
        fab:fab_colorRipple="#ff6090"
        fab:fab_colorPressed="#e91e63"/>

    <com.github.clans.fab.FloatingActionButton
        android:id="@+id/album_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_camera"
        android:layout_gravity="bottom|start"
        android:layout_marginStart="35dp"
        android:layout_marginBottom="45dp"
        fab:fab_showShadow="false"
        fab:fab_progress_backgroundColor="@android:color/transparent"
        fab:fab_colorNormal="@android:color/transparent"
        fab:fab_colorPressed="@android:color/transparent"
        fab:fab_colorRipple="#99aaaaaa"
        fab:fab_size="mini"/>

    <com.github.clans.fab.FloatingActionButton
        android:id="@+id/front_camera_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_switch_camera"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="45dp"
        fab:fab_showShadow="false"
        fab:fab_progress_backgroundColor="@android:color/transparent"
        fab:fab_colorNormal="@android:color/transparent"
        fab:fab_colorPressed="@android:color/transparent"
        fab:fab_colorRipple="#fff"
        fab:fab_size="mini"/>

</FrameLayout>
