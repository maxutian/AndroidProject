<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.demo.mrma.demo.MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#cc666666">

        <android.support.design.widget.VisibilityAwareImageButton
            android:id="@+id/album_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_camera"
            android:layout_gravity="bottom|start"
            android:layout_marginBottom="33dp"
            android:layout_marginStart="25dp"/>

        <android.support.design.widget.VisibilityAwareImageButton
            android:id="@+id/switch_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_switch_camera"
            android:layout_gravity="bottom|end"
            android:layout_marginBottom="33dp"
            android:layout_marginEnd="25dp"/>

        <!--android:background="@drawable/ripple_with_color_mask"-->
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/cameraButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="25dp"
            android:src="@drawable/ic_photo_camera"
            app:fabSize="normal"
            app:borderWidth="0dp"
            app:rippleColor="#ff5c8d"
            app:pressedTranslationZ="12dp"/>

    </FrameLayout>

</android.support.constraint.ConstraintLayout>
